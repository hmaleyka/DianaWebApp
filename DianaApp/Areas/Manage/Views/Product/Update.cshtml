@using DianaApp.Areas.Manage.ViewModels.Product;
@model UpdateProductVM


<div class="container">

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" style="color: red"></span>
            </div>
       
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" style="color: red"></span>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="mb-3 col-md-6" style="margin-left:15px">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                <span asp-validation-for="Description" style="color: red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="CategoryId" class="form-label">Categories</label>
                <select class="form-select" asp-for="CategoryId" asp-items="new SelectList(ViewBag.categories,nameof(Category.Id),nameof(Category.Name))">
                    <option selected> Open this select menu</option>

                </select>
                <span asp-validation-for="CategoryId" style="color: red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="SizeIds" class="form-label">Size</label>
                <select class="form-select" asp-for="SizeIds" asp-items="new SelectList(ViewBag.sizes,nameof(Size.Id),nameof(Size.sizename))">
                </select>
                <span asp-validation-for="SizeIds" style="color: red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="ColorIds" class="form-label">Color</label>
                <select class="form-select" asp-for="ColorIds" asp-items="new SelectList(ViewBag.colors,nameof(Color.Id),nameof(Color.color))">
                </select>
                <span asp-validation-for="ColorIds" style="color: red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="MaterialIds" class="form-label">Materials</label>
                <select class="form-select" asp-for="MaterialIds" asp-items="new SelectList(ViewBag.materials,nameof(Material.Id),nameof(Material.materialName))">
                </select>
                <span asp-validation-for="MaterialIds" style="color: red"></span>
            </div>

        </div>
        <div class="row">
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <div style="width:100px; height:10opx">
                    <img Width="100%" src="~/Upload/Product/@Model.allproductImages?.FirstOrDefault().ImgUrl" />
                </div>
                <label asp-for="photo" class="form-label">mainPhoto</label>
                <input asp-for="photo" class="form-control">
                <span asp-validation-for="photo" style="color: red"></span>
            </div>
        </div>


        <div class="row">
            @* <div class="mb-3" col-2 style="margin-right: 30px;"> *@
            @foreach (var item in Model.allproductImages?.ToList())
            {
                <div class="col02 position-relative">
                    <img style="width:40%; height150px" src="~/Upload/Product/@item.ImgUrl" />
                    <input type="hidden" value="@item.Id" name="ImageIds">

                    <button class="btn btn-danger position-absolute custom-delete" style="right:20%;">X</button>

                </div>
            }
            <label asp-for="additionalphotos" class="form-label">additionalphotos</label>
            <input asp-for="additionalphotos" class="form-control">
            <span asp-validation-for="additionalphotos" style="color: red"></span>

        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>


</div>

<script>
    var btn = document.querySelectorAll(".custom-delete")
    btn.forEach(b => {
        b.addEventListener("click", function () {
            b.parentElement.remove()
        })
    })
</script>