@using DianaApp.ViewModels.Account;

@model LoginVM

<form>
    <div class="form-group">
        <label asp-for="EmailOrUsername">EmailOrUsername</label>
        <input asp-for="EmailOrUsername" placeholder="EmailOrUsername" />
        <span asp-validation-for="EmailOrUsername" style="color:red"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>
    <div class="form-group form-check">
        <div class="check-box">
            <input type="checkbox" asp-for="RememberMe" id="remember_me" />
            <label for="remember_me">Remember me</label>
        </div>
    </div>
    <div class="col-lg-12 pt-5" asp-validation-summary="All"></div>
    <div class="col-lg-12 pt-5">
        <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
            Login
        </button>
    </div>
</form>